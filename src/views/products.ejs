
    <%- include('nav.ejs') %>
    <div class="container">
        <% if(locals.errorMssg){ %>
            <p id="err-mssg"> <%= errorMssg %> </p>
        <% } %>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th class ="action-th" scope="col" colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i =0;i< products.length;i++) { %>
                    <%- include('product-info.ejs',{product:products[i]}) %>
                <% } %>
            </tbody>
        </table>
    </div>
